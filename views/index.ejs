<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Diaryku</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="overlay"></div>
    <div class="container">
        <div class="header">
            <h1>Diaryku</h1>
            <p class="date"><%= date %></p>
            <button class="dark-mode-toggle">üåô</button>
        </div>
        <div class="task-list">
            <% tasks.forEach(function(task, index) { %>
                <div class="task <%= task.completed ? 'completed' : '' %>" data-task-id="<%= task._id %>">
                    <input type="checkbox" class="checkbox-task" id="task<%= task._id %>" <%= task.completed ? 'checked' : '' %> onclick="toggleTaskCompletion('<%= task._id %>')">
                    <button type="button" class="delete-task" onclick="deleteTask('<%= task._id %>')">x</button>
                    <label for="task<%= task._id %>" class="task-label"><%= task.name %></label>
                    <span class="task-category">Tasks</span>
                </div>
            <% }); %>
        </div>
        <div class="progress-bar">
            <div class="progress" style="width: <%= progress %>"></div>
        </div>
        <div class="task-counter">
            <p>Completed: <span id="completed-count"><%= completedTasks %></span> / <span id="total-count"><%= totalTasks %></span></p>
        </div>
        <div>
            <h3>Made with ‚ù§Ô∏è by Syam</h3>
            <h4>smart solution to manage your day</h4>
        </div>
    </div>
    <button class="fab" onclick="openModal()">+</button>
    <div class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <form action="/tasks/add" method="POST" id="add-task-form">
                <input type="text" name="taskName" id="new-task-input" placeholder="Add a task" required>
                <button type="submit" class="add-task-button">Add Task</button>
            </form>
            
        </div>
    </div>
    
    <script src="/js/script.js"></script>
</body>
</html>
